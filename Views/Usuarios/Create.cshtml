@model Banco.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Usuarios" asp-action="Login">Banco</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>
</header>

<div class="container">
    <h1>Create</h1>

    <h4>Usuario</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Curp" class="control-label"></label> 
                    <input asp-for="Curp" class="form-control" />
                    <span asp-validation-for="Curp" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NombreS" class="control-label">Nombre(s)</label>
                    <input asp-for="NombreS" type="text" class="form-control"/>
                    <span asp-validation-for="NombreS" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApellidoP" class="control-label">Apellido Paterno</label>
                    <input asp-for="ApellidoP" type="text" class="form-control"/>
                    <span asp-validation-for="ApellidoP" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApellidoM" class="control-label">Apellido Materno</label>
                    <input asp-for="ApellidoM" type="text" class="form-control" />
                    <span asp-validation-for="ApellidoM" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cumpleaños" class="control-label">Fecha de Nacimiento</label>
                    <input asp-for="Cumpleaños" type="date" class="form-control" />
                    <span asp-validation-for="Cumpleaños" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Login">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

