@model IEnumerable<Banco.Models.Cuentum>

@{
    ViewData["Title"] = "Index";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Gerentes" asp-action="Session">Banco</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-nav ml-auto">
                <span class="align-middle mb-auto">@ViewData["User"] <a class="btn btn-outline-danger" asp-area="" asp-controller="Cuenta" asp-action="Logout">Logout</a></span>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3 text-center">
        <h1 class="display-4">Administrar cuentas</h1>

        <a class="text-left" asp-area="" asp-controller="Cuenta" asp-action="Create">Generar cuenta</a>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        NÃºmero de Cuenta
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Usuario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Saldo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumCuenta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Saldo)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.NumCuenta">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.NumCuenta">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </main>
</div>
