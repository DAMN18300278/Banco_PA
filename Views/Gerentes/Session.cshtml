@model IEnumerable<Banco.Models.Gerente>

@{
    ViewData["Title"] = "Index";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Gerentes" asp-action="Session">Banco</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3 text-center">
        <h1 class="display-4">@ViewData["User"]</h1>

        <div class="text-center">
            <h2 class="h2">Menu</h2>
            <ul class="list-group" style="width: 50%; display: inline-block;">
                <a class="list-group-item btn btn-outline-warning" asp-area="" asp-controller="Usuarios" asp-action="AdminUsers">
                    Solicitudes de cuentas
                </a>
                <a class="list-group-item btn btn-outline-success" asp-area="" asp-controller="Gerentes" asp-action="AdminPayments">
                    Generar cuentas
                </a>
                <a class="list-group-item btn btn-outline-danger" asp-area="" asp-controller="Gerentes" asp-action="Index">
                    Revisar prestamos
                </a>
            </ul>
        </div>


    </main>
</div>

