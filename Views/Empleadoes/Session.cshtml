@model IEnumerable<Banco.Models.Empleado>

@{
    ViewData["Title"] = "Index";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Cuenta" asp-action="Session">Banco</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-nav ml-auto">
                <span class="align-middle mb-auto">@ViewData["User"] <a class="btn btn-outline-danger" asp-area="" asp-controller="Cuenta" asp-action="Logout">Logout</a></span>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3 text-center">
        <h1 class="display-4">@ViewData["User"]</h1>

        <div class="text-center">
            <h2 class="h2">Menu</h2>
            <ul class="list-group" style="width: 50%; display: inline-block;">
                <a class="list-group-item btn btn-outline-warning" asp-area="" asp-controller="DatosPrestamoes" asp-action="Index">
                    Revisar historial de prestamos
                </a>
                <a class="list-group-item btn btn-outline-success" asp-area="" asp-controller="DatosPrestamoes" asp-action="Index">
                    Revisar prestamo activo
                </a>
                <a class="list-group-item btn btn-outline-danger" asp-area="" asp-controller="DatosPrestamoes" asp-action="Index">
                    Revisar prestamo activo
                </a>
            </ul>
        </div>


    </main>
</div>

